@model WebApplication1.Models.Document

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this document?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Document subject
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DocSubject)
        </dd>
        <dt class = "col-sm-2">
            Document title
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DocTitle)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
