@model WebApplication1.Models.DocumentFile

@{
}

<h1>Add new file</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FileUploader" class="control-label"></label>
                <input asp-for="FileUploader" class="form-control" placeholder="(Will be removed, only for demonstration purpose)" />
                <span asp-validation-for="FileUploader" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FormFile" class="control-label"></label>
                <input type="file" asp-for="FormFile" class="form-control" />
                <span asp-validation-for="FormFile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add!" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-route-id="@(ViewContext.RouteData.Values["id"])">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
